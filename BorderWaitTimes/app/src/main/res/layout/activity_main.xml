<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kantor.sam.borderwaittimes.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-------------DELAY FOR-------------"
        style="@style/headerText"
        android:textSize="20dp"
        android:id="@+id/delayforBridge"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="1120dp"
        android:layout_height="288dp"
        android:id="@+id/recommendPicture"
        android:src="@drawable/green" />

    <TextView
        android:layout_width="wrap_content"
        style="@style/headerText"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fill in later -- suggested java class"
        android:id="@+id/recommended_bridge"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/delayforBridge"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recommendedDelay"
        android:text="No Delay"
        style="@style/headerText"
        android:layout_below="@id/recommended_bridge"  />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="----------RECOMMENDED----------"
        style="@style/headerText"
        android:textSize="20dp"
        android:id="@+id/Recommended"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/delayforBridge"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textStyle="bold"
        style="@style/headerText"
        android:id="@+id/Bridge_1"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/Recommended"
        android:layout_alignStart="@+id/Bridge_3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:id="@+id/refreshButton"
        android:onClick="update"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/headerText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Bridge_2"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Bridge_3" />

    <TextView
        android:layout_width="wrap_content"
        style="@style/headerText"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Bridge_3"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>